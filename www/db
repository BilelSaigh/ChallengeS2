DROP TABLE IF EXISTS esgi_Theme CASCADE;
DROP TABLE IF EXISTS esgi_Comment CASCADE;
DROP TABLE IF EXISTS esgi_User CASCADE;

CREATE TABLE esgi_User (
    id          SERIAL,
	firstname   CHAR(64)  NOT NULL,
	lastname    CHAR(120)  NOT NULL,
	email       VARCHAR(320)  NOT NULL,
    pwd              VARCHAR(128) NOT NULL,
    pwdConf         VARCHAR(128) NOT NULL,
    role            smallint NOT NULL,
    lastconnected   timestamp,
    verifmail        boolean not NULL,
    token           CHAR(10) NOT NULL,
)

